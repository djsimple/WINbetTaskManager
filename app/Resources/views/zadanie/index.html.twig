{% extends 'base.html.twig' %}
{% block body %}
    <h1>Заявки</h1>
    <!--
	<ul>
        <li>
		    {% if app.user.type != "Designer" and app.user.type != "Executioner" %}
            <a class="new_query_button" href="{{ path('zadanie_new') }}">Създай нова заявка</a>
            {% endif %}
        </li>
    </ul>
	-->
    {% if zadanies %}
        <table id="index">
            <thead>
            <tr>
                <th>Отдел</th>
                <th>От</th>
                <th>Вид</th>
                <th>Описание</th>
                <th>Краен Срок</th>
                <th>Дата</th>
                <th>Дизайнер</th>
                <th>Подизпълнител</th>
                <th>Приключил</th>
                <th>Статус</th>
				<!--
                <th>Опции</th>
                -->
				<th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for zadanie in zadanies %}
                <tr class="{{ zadanie.class }}">
                    <td>{{ zadanie.department }}</td>
                    <td>{{ zadanie.fromUser }}</td>
                    <td>{{ zadanie.typeTask }}</td>
                    <td class="more">{{ zadanie.description }}</td>
                    <td>{% if zadanie.term %}{{ zadanie.term|date('d-m-Y H:i:s') }}{% endif %}</td>
                    <td>{% if zadanie.date %}{{ zadanie.date|date('d-m-Y H:i:s') }}{% endif %}</td>
					{% if app.user.type == "LittleBoss" or app.user.type == "Boss"  %}
                    <td>{{ zadanie.designer }}</td>
					{% else %}
							{% if zadanie.designerAccepted %}
							<td>Разпределена</td>
							{% else %}
							<td></td>
					        {% endif %}
					{% endif %}
                    <td>{{ zadanie.executioner }}</td>
                    <td>{% if zadanie.isOver %}Да{% else %}Не{% endif %}</td>
                    <td>{{ zadanie.status }}</td>
					

					<td id="actions" style="padding:10px 10px 0 10px">
				    {% if zadanie.isOver and app.user.type == "LittleBoss" or app.user.type == "Boss"  %}


					{% elseif app.user.type == "LittleBoss" or app.user.type == "Boss"  %}
                        <form action="{{ path('zadanie_update', { 'id': zadanie.id }) }}" method="post" style="margin-top: 10px; margin-left: 0px; margin-right: 0px;">
                            <div class="col-md-2">
                                <input type="submit" id="approve" name="approve" value="Одобрявам"><div class="approve_icon"></div>
                            </div>
                            <div class="col-md-2">
                                <input type="submit" id="reject" name="reject" value="Отхвърлям"><div class="reject_icon"></div>
                            </div>
                            <div class="col-md-2">
                                <input type="submit" id="hold" name="hold" value="На изчакване"><div class="hold_icon"></div>
                            </div>
                            <div>
                                <input type="submit" id="forApproval" name="forApproval" value="За одобрение"/>
                            </div>
                        </form>
					{% elseif app.user.type == "Designer" %}
					    Button for Designer
						</td>
					{% endif %}

					
					<td id="actions">
                        <ul class="show_edit_buttons">
                            <li style="border-bottom: 1px solid #000;">
                                <a href="{{ path('zadanie_show', { 'id': zadanie.id }) }}">Детайли</a>
                            </li>
                            {% if zadanie.isOver %}

							{% elseif app.user.type != "Designer" and app.user.type != "Executioner"  %}	
							    <li>
                                    <a href="{{ path('zadanie_edit', { 'id': zadanie.id }) }}">Промяна</a>
                                </li>
                            {% endif %}
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div>Нямате задания към момента!</div>
    {% endif %}

{% endblock %}
