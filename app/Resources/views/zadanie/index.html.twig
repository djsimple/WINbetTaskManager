{% extends 'base.html.twig' %}
{% block body %}
    <h1>Заявки</h1>
    <!--
	<ul>
        <li>
		    {% if app.user.type != "Designer" and app.user.type != "Executioner" %}
            <a class="new_query_button" href="{{ path('zadanie_new') }}">Създай нова заявка</a>
            {% endif %}
        </li>
    </ul>
	-->
    {% if zadanies %}
        <table id="index">
            <thead>
            <tr>
                <th>Отдел</th>
                <th>От</th>
                <th>Вид</th>
                <th>Описание</th>
                <th>Файл</th>
                <th>Краен Срок</th>
                <th>Дата</th>
                <th>Дизайнер</th>
                <th>Подизпълнител</th>
                <th>Статус</th>	
                <th>Коментари</th>	
            </tr>
            </thead>
            <tbody>
            {% for zadanie in zadanies %}
                <tr class="{{ zadanie.class }}">
                    <td class="department">{{ zadanie.department }}</td>
                    <td class="user">{{ zadanie.fromUser }}</td>
                    <td class="type">{{ zadanie.typeTask }}</td>
                    <td class="more">{{ zadanie.description }}</td>
					<td>{% if zadanie.file%}<a href="{{ zadanie.file }}" target="_blank">Линк към файла</a> {% else %}Няма качени файлове{% endif %}</td>
                    <td class="date">{% if zadanie.term %}{{ zadanie.term|date('d-m-Y H:i:s') }}{% endif %}</td>
                    <td class="date">{% if zadanie.date %}{{ zadanie.date|date('d-m-Y H:i:s') }}{% endif %}</td>
					{% if app.user.type == "LittleBoss" or app.user.type == "Boss"  %}
                    <td>{{ zadanie.designer }}</td>
					{% else %}
							{% if zadanie.designerAccepted %}
							<td>Разпределена</td>
							{% else %}
							<td></td>
					        {% endif %}
					{% endif %}
                    <td>{{ zadanie.executioner }}</td>
                    <td class="status">{{ zadanie.status }}</td>
					<td rowspan = "2" class="comments">
                        <div style="overflow-y: auto; width: 100%;height: 180px;margin: 0;padding: 0;">
                            {% for comment in zadanie.comments %}
                           <p class="row">От: {{ comment.madeBy }}</p>
                           <p class="row">Дата {{ comment.date|date("d-m-Y H:i:s") }}</p>
	                       <span>Коментар: </span>{{ comment.content }}
                            {% endfor %}
                        </div>

                    </td>
                </tr>
			    <tr id="actions" class="{{ zadanie.class }}">
				    <td colspan = "11" id="buttons" style="padding: 10px 0px 0px 0px;">
				    {% if zadanie.isOver and app.user.type == "LittleBoss" or app.user.type == "Boss"  %}


					{% elseif app.user.type == "LittleBoss" or app.user.type == "Boss"  %}
                        <form action="{{ path('zadanie_update', { 'id': zadanie.id }) }}" method="post">
                            <div class="col-md-2">
                                <input type="submit" id="approve" name="approve" value="Одобрявам"><div class="approve_icon"></div>
                            </div>
                            <div class="col-md-2">
                                <input type="submit" id="reject" name="reject" value="Отхвърлям"><div class="reject_icon"></div>
                            </div>
                            <div class="col-md-2">
                                <input type="submit" id="hold" name="hold" value="На изчакване"><div class="hold_icon"></div>
                            </div>
                            <div class="col-md-2" >
                                <input type="submit" id="forApproval" name="forApproval" value="За одобрение"/><div class="forApproval_icon"></div>
                            </div>
							
					{% elseif app.user.type == "Designer" %}
					<!--
                            <div class="col-md-2">
                                <input type="submit" id="working" name="working" value="Работи се"/><div class="working_icon"></div>
                            </div>	
-->							
					{% endif %}
					
					    </form>
                             <div>
								<div class="col-md-2">
									<input id="button_details" value="Детайли" onclick="location.href='{{ path('zadanie_show', { 'id': zadanie.id }) }}'"/><div class="details_icon"></div>
								</div>
                            {% if zadanie.isOver %}

							{% elseif app.user.type != "Executioner" and app.user.type != "Manager" %}	
								<div class="col-md-2">
									<input id="button_edit" value="Промяна" onclick="location.href='{{ path('zadanie_edit', { 'id': zadanie.id }) }}'"/><div class="edit_icon"></div>
								</div>
                            </div>
							{% endif %}
					</td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div>Нямате задания към момента!</div>
    {% endif %}

{% endblock %}
